{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CLI: Interactive Mode",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/run_cli.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "envFile": "${workspaceFolder}/backend/.env",
            "justMyCode": true,
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "CLI: Single Command",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/run_cli.py",
            "args": [
                "status"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "envFile": "${workspaceFolder}/backend/.env",
            "justMyCode": true,
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "CLI: Init Database",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/run_cli.py",
            "args": [
                "init-db"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "envFile": "${workspaceFolder}/backend/.env",
            "justMyCode": true,
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "API: Start Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/run_api.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "envFile": "${workspaceFolder}/backend/.env",
            "justMyCode": true,
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "envFile": "${workspaceFolder}/backend/.env",
            "justMyCode": true,
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "Pytest: All Unit Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/unit/",
                "-v",
                "--tb=short"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "Pytest: All Integration Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/integration/",
                "-v",
                "--tb=short"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "Tests: Run Current Test File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v",
                "-s",
                "--tb=short"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "Pytest: DataManager Coverage",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/unit/",
                "-v",
                "--cov=app/managers/data_manager",
                "--cov-report=html",
                "--cov-report=term"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "Tests: Run Failed Tests Only",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--lf",
                "-v",
                "-s",
                "--tb=short"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "Tests: All Quality Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/unit/test_quality_helpers.py",
                "tests/integration/test_quality_calculation_flow.py",
                "-v",
                "-s",
                "--tb=short"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "Tests: Quality Unit Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/unit/test_quality_helpers.py",
                "-v",
                "-s",
                "--tb=short"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "Tests: Quality Integration Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/integration/test_quality_calculation_flow.py",
                "-v",
                "-s",
                "--tb=short"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "Tests: All Backend Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "-s",
                "--tb=short"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "Pytest: All Tests with Full Coverage",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "--cov=app",
                "--cov-report=html",
                "--cov-report=term"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "Pytest: Current Test Function",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}::${selectedText}",
                "-v",
                "--tb=short"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        }
    ]
}
